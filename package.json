{
  "name": "veridian-os",
  "version": "0.1.0",
  "description": "A smart plant growing application",
  "main": "index.js",
  "scripts": {
    "dev:local:npm": "npm run dev --workspace=server & npm run dev --workspace=client",
    "dev:local": "./scripts/dev-local.sh",
    "dev:local:concurrent": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "dev:docker": "./scripts/dev.sh",
    "dev:docker:mock": "./scripts/dev-mock.sh",
    "prod:docker": "./scripts/prod.sh",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "start:server": "npm start --workspace=server",
    "start:client": "npm start --workspace=client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "concurrently": "^9.2.0"
  }
}
