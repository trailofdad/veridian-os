{
  "name": "veridian-os",
  "version": "0.5.1",
  "description": "A smart plant growing application",
  "main": "index.js",
  "scripts": {
    "dev:local:concurrent": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "deploy:pi:docker": "./scripts/deploy-pi-docker.sh",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "docker:build:client": "docker build -f client/Dockerfile -t veridian-os-client:latest .",
    "docker:build:server": "docker build -f server/Dockerfile -t veridian-os-server:latest .",
    "docker:build:all": "npm run docker:build:client && npm run docker:build:server",
    "docker:up:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:up:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down:prod": "docker compose -f docker-compose.prod.yml down",
    "docker:down:dev": "docker compose -f docker-compose.dev.yml down",
    "docker:logs:prod": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:logs:dev": "docker compose -f docker-compose.dev.yml logs -f",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry-run": "standard-version --dry-run",
    "prerelease": "npm run build"
  },
  "keywords": [
    "plant",
    "monitoring",
    "iot",
    "raspberry-pi",
    "next.js",
    "node.js"
  ],
  "author": "",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "concurrently": "^9.2.0"
  },
  "devDependencies": {
    "standard-version": "^9.5.0"
  }
}
